// 文件路径: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 这就是我们设计的“用户”数据表
// 它有4个字段：id, email, 加密后的密码, 和创建时间
model User {
  id             String   @id @default(cuid())
  email          String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())
}